int findMaxLen(string s) {
        stack<int>st;
        int n=s.length();
        st.push(-1);
        int result=0;
        for(int i=0;i<n;i++){
            if(s[i]=='('){
                st.push(i);
            }else{
                st.pop();
            }
            if(!st.empty()){
                result=max(result,i-st.top());
            }else{
                st.push(i);
            }
        }
        return result;
    }
