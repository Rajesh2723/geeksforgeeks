int peakElement(int arr[], int n)
    {
     for(int i=0;i<n;i++){
         if(i!=n-1){
             if(arr[i]>arr[i+1])
             return i;
         }else{
             if(arr[i]>arr[i-1]){
                 return i;
             }
         }
     }
     return 0;
    }
    //here we are just checking the arr[i]>arr[i+1] and arr[i]>arr[i-1] we are just returning the i value 
    
